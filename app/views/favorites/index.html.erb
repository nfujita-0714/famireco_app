<h1>お気に入り一覧</h1>

<div>
  <% @favorites.each do |picture| %>
    <div>
      <%= image_tag picture.image.url %>
    </div>
    <div>
      <%= picture.content %>       
      <% picture.labels.each do |label| %>
        <%= label.name %>
      <% end %>
      <br>
      <%= link_to '投稿詳細', picture_path(picture) %>
    </div>
    <div>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>