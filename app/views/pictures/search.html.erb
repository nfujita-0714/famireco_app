<h1>検索した投稿一覧</h1>

<div>
  <% @results.each do |result| %>
    <div>
      <%= image_tag result.image.url, :size =>'320x320' %>
    </div>
    <%= result.created_at.strftime('%Y/%m/%d') %><br>
    投稿者：<%= result.user.name %>
    <%= link_to 'ユーザー詳細', user_path(result.user) %>
    <div>
    内容：<%= result.content %>       
      <% result.labels.each do |label| %>
        ラベル：<%= label.name %>
      <% end %>
      <br>
      <%= link_to '投稿詳細', picture_path(result) %>
    </div>
  <% end %>
</div>

<br>
<div class="back_page">
  <%= link_to "戻る", pictures_path %>
</div>