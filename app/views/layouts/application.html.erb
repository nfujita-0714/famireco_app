<!DOCTYPE html>
<html>
  <head>
    <title>Famireco</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <ul class="nav navbar-nav">
    <% if user_signed_in? %>
      <li class="active"><%= link_to "投稿一覧", pictures_path %>
      <li class="active"><%= link_to "ログアウト",  destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li class="active"><%= link_to "ユーザー登録", new_user_registration_path %></li>
      <li class="active"><%= link_to "ログイン", new_user_session_path %></li>
    <% end %>
  </ul>
    <%= yield %>
  </body>
</html>
